<div class="container d-flex" style="width: 50%">

  <div class="column card p-3 mr-auto">

    <%= cl_image_tag @flat.photo.key, height: 300, width: 400, crop: :fill %>
      <h1><%= @flat.title %></h1>
      <h4><%= @flat.city %></h4>
      <h4><%= @flat.street %></h4>
      <h4><%= @flat.price_per_night %></h4>
          <p class="font-weight-light"><%= @flat.description %></p>

  </div>

  <div class="d-felx column p-3 card">
    <h2>Book your flat here </h2>
    <%= simple_form_for [@flat, @booking] do |f| %>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <%= f.submit %>

    <% end %>
  </div>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
