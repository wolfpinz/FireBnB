<h1 class="text-center p-3">Welcome to FireBnb!</h1>
<h2 class="text-center p-3">Find a flat</h2>

  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group" style="margin: 32px 160px 64px 160px">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
  <% end %>
<div class="container">
  <div class="cards">
    <% @flats.each do |flat| %>
    <%= link_to flat_path(flat) do %>
      <div class="card-flat">
        <%= cl_image_tag flat.photo.key %>
        <div class="card-flat-infos">
          <div>
            <h2><%= flat.title %></h2>
            <p><%= "#{flat.description.first(30)}..." %></p>
            <h3 class="card-flat-pricing"><%= "â‚¬#{flat.price_per_night} / night" %></h3>
          </div>
        </div>
      </div>
    <% end %>
    <% end %>
</div>
</div>
