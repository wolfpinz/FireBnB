              <h4 class="card-title p-2"><%= flat.title %></h4>
              <p class="card-text"><%= flat.description %></p>
              <p>Address: <%= flat.street %> in <%= flat.city %></p>
              <p>Price/Night: <%= flat.price_per_night %>â‚¬</p>
              <%= link_to "Show", flat_path(flat), class: "btn btn-red btn-m text-decoration-none" %>
          </div>
          <% end %>
        </div>
      </ul>
  </body>
</div>
