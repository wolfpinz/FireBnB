<h1 class="text-center p-3">Welcome to FireBnb!</h1>
<h2 class="text-center p-3">Find a flat</h2>
<div style="width: 700px">
  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
  <% end %>
</div>

<div class="container">
  <div class="cards">
    <% @flats.each do |flat| %>
      <div class="card-flat">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
        <div class="card-flat-infos">
          <div>
            <h2><%= flat.title %></h2>
            <p><%= "Short description here!" %></p>
            <h2 class="card-flat-pricing"><%= "â‚¬#{flat.price_per_night} / night" %></h2>
          </div>
        </div>
      </div>
    <% end %>
</div>
</div>
