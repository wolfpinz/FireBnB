<div class="container">
  <h1 class="text-center justify-content-center">My Bookings</h1>

  <body class="justify-content-center">
    <div class="">
      <ul >
        <div class="d-flex flex-row  justify-content-around text-center">
          <% @bookings.each do |booking| %>
            <div class="card p-2 m-3 border-0 rounded shadow-sm" style="width: 40%;" >
              <h4 class="card-title p-2"><%= booking.flat %></h4>
              <p class="card-text"><%= booking.start_date %>/<%= booking.end_date %></p>
          </div>
          <% end %>
        </div>
      </ul>
    </div>
  </body>
</div>
